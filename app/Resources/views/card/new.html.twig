{% extends 'base.html.twig' %}

{% block body %}
    <h1>Card creation</h1>

    <form name="appbundle_card" method="post">
        <div id="appbundle_card">
            <div>
                <label for="appbundle_card" class="required">Title</label>
                <input type="text" id="appbundle_card" name="appbundle_card[title]" required="required" maxlength="255">
            </div>
            <div>
                <label for="appbundle_card" class="required">Description</label><textarea id="appbundle_card" name="appbundle_card[description]" required="required"></textarea>
            </div>
            <div>
                <label class="required">Type</label>
                {% set counter = 0 %}
                {% for type in types %}
                    {% set counter = counter + 1 %}
                    <input type="radio" id="appbundle_card_type_{{counter}}" value="{{type.name}}" name="appbundle_card[type]"
                    {% if type.name == 'task'%}checked="checked"{% endif %}> {{type.name}}
                {% endfor %}
            </div>
            <div>
                <label class="required">Status</label>
                {% set counter = 0 %}
                {% for status in statuses %}
                    {% set counter = counter + 1 %}
                    <input type="radio" id="appbundle_card_status_{{counter}}" value="{{status.name}}" name="appbundle_card[status]"
                    {% if status.name == 'backlog'%}checked="checked"{% endif %}> {{status.name}}
                {% endfor %}
            </div>
            <div>
                <label class="required">Assigned to</label>
                {% set counter = 0 %}
                {% for member in members %}
                    {% set counter = counter + 1 %}
                    <input type="radio" id="appbundle_card_member_{{counter}}" value="{{member.name}}" name="appbundle_card[member]"
                    {% if member.name == 'backlog'%}checked="checked"{% endif %}> {{member.name}}
                {% endfor %}
            </div>
            {{ form_row(form._token) }}
        </div>
        <input type="submit" value="Create">
    </form>

    <ul>
        <li>
            <a href="{{ path('card_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
