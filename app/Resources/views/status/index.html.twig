{% extends 'base.html.twig' %}

{% block body %}
    <h1>Statuses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position</th>
                <th>Wip Limit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td><a href="{{ path('status_show', { 'id': status.id }) }}">{{ status.id }}</a></td>
                <td>{{ status.name }}</td>
                <td>{{ status.position }}</td>
                <td>{{ status.wipLimit is null ? 'no limit' : status.wipLimit }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('status_show', { 'id': status.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('status_edit', { 'id': status.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('status_new') }}">Create a new status</a>
        </li>
    </ul>
{% endblock %}
